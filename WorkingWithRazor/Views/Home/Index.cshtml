@model Product[]
@{ 
   
    //layout now in view start .cshtml
    //we have given a viewbag title here
    ViewBag.Title = "Product Name";
}
<table>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach( Product p in Model)
        {
            <tr>
            <td>@p.Name</td>
            <td>@p.price</td>
                </tr>
        }
    </tbody>
</table>






